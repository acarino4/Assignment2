<div class="container">
    <h1>Business Contacts List</h1>

    <div class="row">
        <div class="col">
            <a href="/add" id="addBtn" class="btn btn-success mb-1"><i class="fa-solid fa-circle-plus"></i> Add Contact</a>
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col" class="">Name</th>
                        <th scope="col" class="">Contact Number</th>
                        <th scope="col" class="">Email</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="contactList">
                    <!--repeatable rows-->
                    <% for(let count = 0; count < business.length; count++){ %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1%></th>
                            <td><%= business[count].Name %></td>
                            <td><%= business[count].Number %></td>
                            <td><%= business[count].Email %></td>
                            <td class="text-center"><a href="/update/<%= business[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fa-solid fa-pen-to-square"></i> Edit</a></td>
                            <td class="text-center"><a href="/delete/<%= business[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fa-solid fa-trash-can"></i> Delete</a></td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>