<div class="container">
    <h1> <%= title %> Contacts </h1>

    <div id="messageArea"></div>

    <div class="row justify-content-lg-center g-3">
      <form method="POST">

        <div class="input-group mb-3">
          <span class="input-group-text">Name</span>
          <input id="contactName" name="contactName" type="text" class="form-control" 
          value="<%=contact.Name %>"
          aria-label="Contact Name" aria-describedby="Contact Name Input" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">Number</span>
            <input id="contactNumber" name="contactNumber" type="text" class="form-control" 
            value="<%=contact.Number %>"
            aria-label="Contact Number" aria-describedby="Contact Number Input" required>
          </div>

        <div class="input-group mb-3">
        <span class="input-group-text">Email Address</span>
        <input id="contactEmail" name="contactEmail" type="text" class="form-control" 
        value="<%=contact.EmailAddress %>"
        aria-label="Email Address" aria-describedby="Email Address Input" required>
        </div>
        
        <% if(title == "Edit") { %>
        <button id="editButton" type="submit" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
        <% }%>

        <a href="/contact-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</a>
      
      </form>

    </div>
</div>